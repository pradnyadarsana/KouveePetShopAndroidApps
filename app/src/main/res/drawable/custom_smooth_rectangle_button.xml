<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/colorPrimaryWhite"></solid>
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="@color/colorPrimaryOrange"/>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorPrimaryWhite"
                android:endColor="@color/colorAccentWhite" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="@color/colorAccentOrange"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorPrimaryWhite"
                android:endColor="@color/colorAccentWhite" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="@color/colorAccentOrange"/>
        </shape>
    </item>
</selector>