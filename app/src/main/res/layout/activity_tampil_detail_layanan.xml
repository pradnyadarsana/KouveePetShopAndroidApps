            <TextView
                android:id="@+id/tvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Edit Profile"
                android:textColor="@color/colorPrimaryWhite"/>
