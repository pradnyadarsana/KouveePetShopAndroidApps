<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:background="@color/colorPrimaryWhite"
    tools:context=".adapter.NotifikasiAdapter"
    android:id="@+id/ParentNotifikasi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_image_foreground"
                android:tint="@color/colorPrimaryGrey"
                android:id="@+id/ivGambarProdukNotifikasi">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tvDeskripsiNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="5"
                android:text=""/>
            <TextView
                android:id="@+id/tvCreatedAtNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="11sp"
                android:text="Tanggal"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
