<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.AdminManagePageFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">
                <Button
                    android:text="PRODUK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/product_logo_foreground"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btnKelolaProduk"></Button>
                <Button
                    android:text="LAYANAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/service_logo_foreground"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/btnKelolaLayanan"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">
                <Button
                    android:text="SUPPLIER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/supplier_logo_foreground"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btnKelolaSupplier">
                </Button>
                <Button
                    android:text="PENGADAAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/pengadaan_logo_foreground"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/btnKelolaPengadaan"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp">
                <Button
                    android:text="JENIS HEWAN"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/kind_logo_foreground"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btnKelolaJenisHewan">
                </Button>
                <Button
                    android:text="UKURAN HEWAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/size_logo_foreground"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/btnKelolaUkuranHewan"></Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>