<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    tools:context=".adapter.EditTransaksiLayananAdapter"
    android:id="@+id/ParentEditItemTransaksiLayanan">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <AutoCompleteTextView
            android:id="@+id/etNamaLayananEditTransaksiLayanan"
            android:layout_width="265dp"
            android:layout_height="37dp"
            android:ems="10"
            android:hint="Nama Layanan"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/layoutCounterLayanan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnKurangJumlahEditTransaksiLayanan"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:textSize="13dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/colorPrimaryOrange"
                android:backgroundTint="@color/colorPrimaryWhite"
                android:elevation="10dp">
            </Button>
            <TextView
                android:id="@+id/tvJumlahEditTransaksiLayanan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btnTambahJumlahEditTransaksiLayanan"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:textSize="13dp"
                android:textAlignment="center"
                android:text="+"
                android:textColor="@color/colorPrimaryOrange"
                android:backgroundTint="@color/colorPrimaryWhite"
                android:elevation="10dp">
            </Button>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etNamaLayananEditTransaksiLayanan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutHargaSatuanLayanan"
            android:layout_marginTop="7dp"
            android:text="HARGA SATUAN LAYANAN"
            android:textSize="10dp"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:id="@+id/layoutHargaSatuanLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textRp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvHargaLayananEditTransaksiLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layoutCounterLayanan"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutTotalHargaLayanan"
            android:layout_marginTop="7dp"
            android:text="TOTAL HARGA"
            android:textSize="10dp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:id="@+id/layoutTotalHargaLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textRpTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvTotalHargaEditTransaksiLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

