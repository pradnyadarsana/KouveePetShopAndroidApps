<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".produk.TambahProdukActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/product_logo_foreground"/>

            <EditText
                android:id="@+id/etNamaProduk"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/logo"
                android:layout_marginTop="25dp"
                android:hint="Nama Produk"/>

            <EditText
                android:id="@+id/etSatuanProduk"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/etNamaProduk"
                android:layout_marginTop="25dp"
                android:hint="Satuan"/>
            <EditText
                android:id="@+id/etHargaProduk"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/etSatuanProduk"
                android:layout_marginTop="25dp"
                android:inputType="number"
                android:hint="Harga"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/etHargaProduk"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:id="@+id/layoutstok">
                <EditText
                    android:id="@+id/etJumlahStokProduk"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:hint="Jumlah Stok"/>
                <EditText
                    android:id="@+id/etMinStokProduk"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:hint="Min Stok"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="135dp"
                android:layout_below="@id/layoutstok"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:id="@+id/layoutgambar">
                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="135dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#EEEEEE">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/etGambar"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="17dp"
                            android:inputType="textMultiLine"
                            android:text="Ketuk untuk mengambil gambar!">
                        </TextView>
                        <ImageView
                            android:id="@+id/addGambarProduk"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:maxHeight="100dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/default_image_foreground">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layoutgambar"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="70dp"
                android:text="TAMBAH"
                android:id="@+id/btnTambahProduk" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>