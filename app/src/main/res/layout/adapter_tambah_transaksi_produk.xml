<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="3dp"
    tools:context=".adapter.TambahLayananAdapter"
    android:id="@+id/ParentTambahItemTransaksiProduk">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <AutoCompleteTextView
            android:id="@+id/etNamaProdukTransaksi"
            android:layout_width="265dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Nama Produk"
            android:textSize="15dp"
            android:ems="10" />

        <LinearLayout
            android:id="@+id/layoutCounterProduk"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnKurangJumlahProdukTransaksi"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:textSize="13dp"
                android:textAlignment="center"
                android:text="-"
                android:textColor="@color/colorPrimaryOrange"
                android:backgroundTint="@color/colorPrimaryWhite"
                android:elevation="10dp">
            </Button>
            <TextView
                android:id="@+id/tvJumlahProdukTransaksi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="99"/>
            <Button
                android:id="@+id/btnTambahJumlahProdukTransaksi"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:textSize="13dp"
                android:textAlignment="center"
                android:text="+"
                android:textColor="@color/colorPrimaryOrange"
                android:backgroundTint="@color/colorPrimaryWhite"
                android:elevation="10dp">
            </Button>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etNamaProdukTransaksi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutHargaSatuanProduk"
            android:layout_marginTop="7dp"
            android:text="HARGA SATUAN PRODUK"
            android:textSize="10dp"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:id="@+id/layoutHargaSatuanProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textRp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvHargaProdukTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800000000"
                android:textSize="15dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layoutCounterProduk"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutTotalHargaProduk"
            android:layout_marginTop="7dp"
            android:text="TOTAL HARGA"
            android:textSize="10dp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:id="@+id/layoutTotalHargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textRpTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvTotalHargaProdukTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800000000"
                android:textSize="15dp"/>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
