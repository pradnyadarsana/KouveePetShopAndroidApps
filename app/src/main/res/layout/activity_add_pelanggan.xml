<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textJudulPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="DATA PELANGGAN"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textNamaPelanggan"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan" />

    <EditText
        android:id="@+id/editNamaPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textAlamatPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat Pelanggan" />

    <EditText
        android:id="@+id/editAlamatPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textTanggalLahirPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"/>

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <TextView
        android:id="@+id/textTelpPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telephone Pelanggan" />

    <EditText
        android:id="@+id/editTelpPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSimpanPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Simpan"/>

    <Button
        android:id="@+id/btnBatalSimpanPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Batal"/>

</LinearLayout>